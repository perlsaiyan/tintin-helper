	    	#case {"Wizard"} {
                #if {(&MSDP_GROUP) && (&MSDP_GROUP[] > 1) } {
                    #if {$MSDP_MANA > 100} {queueAdd nco {static group}}
                } {
                    #if {$MSDP_MANA > 40}  {queueAdd nco {static}}
