			#if { ("$autogrim" == "on") } {
                #if { @autobuf_check } {
				    #if {(&MSDP_GROUP) && (&MSDP_GROUP[] > 2) } {
				    	#if {$MSDP_MANA > 100} {queueAdd nco {grimw group}}
				    } {
				    	#if {$MSDP_MANA > 40}  {queueAdd nco {grimw}}
				    }
