            }
	    }
	}
}

#alias doUnholyAura {
    #if {@autobuf_check{aura} && ("autoaura" == "on")} {
	    #switch {"$MSDP_CLASS"} {
	    	#case {"Dreadlord"} {
	       		#if {(&MSDP_GROUP) && (&MSDP_GROUP[] > 9) } {
                    #if {$MSDP_MANA > 100} {queueAdd nco {aura group}}
                } {
                    #if {$MSDP_MANA > 40}  {queueAdd nco {aura}}
                }
	    	};
	    	#case {"Necromancer"} {
                #if {(&MSDP_GROUP) && (&MSDP_GROUP[] > 2) } {
                    #if {$MSDP_MANA > 100} {queueAdd nco {aura group}}
                } {
